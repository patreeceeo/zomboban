{
  "name": "parcel_playground",
  "type": "module",
  "packageManager": "yarn@3.6.4",
  "source": "src/index.html",
  "scripts": {
    "start": "nodemon start.ts",
    "build": "parcel build",
    "test": "NODE_ENV=test ts-node --transpileOnly --esm --experimentalSpecifierResolution=node test.ts",
    "test-dev": "NODE_OPTIONS=\"--max_old_space_size=8192\" NODE_ENV=test nodemon --transpileOnly --experimentalSpecifierResolution=node test.ts -w \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@parcel/config-default": "^2.10.0",
    "@parcel/core": "^2.10.0",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.7",
    "@types/pixi.js": "^5.0.0",
    "glob": "^10.3.10",
    "parcel": "^2.10.0",
    "prettier": "^3.0.3",
    "process": "^0.11.10",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "nodemon": "^3.0.1",
    "pixi.js": "^7.3.2",
    "serve-static": "^1.15.0",
    "ts-node": "^10.9.1"
  },
  "nodemonConfig": {
    "watch": [
      "start.ts"
    ],
    "execMap": {
      "ts": "ts-node-esm"
    }
  }
}
